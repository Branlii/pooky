{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@pooky/abstract-interfaces": ["libs/abstract/interfaces/src/index.ts"],
      "@pooky/cqrs-commands": ["libs/cqrs/commands/src/index.ts"],
      "@pooky/cqrs-queries": ["libs/cqrs/queries/src/index.ts"],
      "@pooky/database-entities": ["libs/database/entities/src/index.ts"],
      "@pooky/database-service": ["libs/database/service/src/index.ts"],
      "@pooky/event-dispatcher-kafka": [
        "libs/event-dispatcher/kafka/src/index.ts"
      ],
      "@pooky/event-store-kurrent": ["libs/event-store/kurrent/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
