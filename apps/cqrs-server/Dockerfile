FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system pooky3-cqrs-server && \
          adduser --system -G pooky3-cqrs-server pooky3-cqrs-server

